# Dockerfile for proxy-core - Lightweight API proxy service
# This service handles /v1/messages, /v1/models, /health endpoints
# Optimized for stability - rarely needs updates

FROM golang:1.23-alpine AS builder

WORKDIR /app

# Install build dependencies including gcc for CGO (SQLite)
RUN apk add --no-cache git gcc musl-dev sqlite-dev

# Copy Go modules
COPY proxy/go.mod proxy/go.sum ./proxy/
WORKDIR /app/proxy
RUN go mod download

# Copy Go source code
COPY proxy/ ./

# Build proxy-core with CGO enabled for SQLite and FTS5 support
RUN CGO_ENABLED=1 GOOS=linux go build -tags "fts5" -a -installsuffix cgo -o /app/bin/proxy-core cmd/proxy-core/main.go

# Production runtime
FROM alpine:3.19

WORKDIR /app

# Install runtime dependencies
RUN apk add --no-cache sqlite-libs ca-certificates tzdata

# Create app user for security
RUN addgroup -g 1001 -S appgroup && \
    adduser -S appuser -u 1001 -G appgroup

# Copy built binary
COPY --from=builder /app/bin/proxy-core ./bin/proxy-core
RUN chmod +x ./bin/proxy-core

# Create data directory for SQLite database
RUN mkdir -p /app/data && chown -R appuser:appgroup /app

# Copy config file if present (optional - can be mounted)
COPY config.yaml* ./

# Environment variables with defaults
ENV PROXY_CORE_PORT=8001
ENV DB_PATH=/app/data/requests.db

# Expose port
EXPOSE 8001

# Switch to app user
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD wget -qO- http://localhost:8001/health > /dev/null || exit 1

# Run proxy-core
CMD ["./bin/proxy-core"]
